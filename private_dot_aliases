# ZSH configuration
alias zshconf="$EDITOR ~/.zshrc"
alias zshsource="source ~/.zshrc"
alias zshupd="cd ~/.oh-my-zsh && git pull && cd -"

# SSH configuration
alias sshconf="$EDITOR ~/.ssh/config"
alias sshknown="$EDITOR ~/.ssh/known_hosts"
alias sshpubkey="cat ~/.ssh/id.pub"
alias sshremove="~/.config/tmux/scripts/ssh-key-remove.sh"

# Neovim shorthand
alias nv="nvim"

# Some tmux goodies
alias tm="~/.config/tmux/scripts/tmux-sessionizer.sh"

# Use bat instead of cat
alias cat="bat"

# Use ncdu instead of du
alias du="ncdu"

# Weather
alias weather="curl wttr.in/cluj"

# eza in place of ls
alias ls="eza"
alias la="eza -la"
alias l="eza -l"
alias tree="eza --tree"

# lazygit
alias lg="lazygit"
