# ZSH configuration
alias zshconf="$EDITOR ~/.zshrc"
alias zshsource="source ~/.zshrc"

# SSH configuration
alias sshconf="$EDITOR ~/.ssh/config"
alias sshknown="$EDITOR ~/.ssh/known_hosts"
alias sshpubkey="cat ~/.ssh/id.pub"
alias sshremove="ssh-keygen -R"

alias vim="nvim"

# Some tmux goodies
alias tm="~/.config/tmux/scripts/tmux-sessionizer.sh"

# Use bat instead of cat
alias cat="bat"

# Use ncdu instead of du
alias du="ncdu"

# Weather
alias weather="curl wttr.in/cluj"

# exa in place of ls
alias exa="exa --icons"
alias ls="exa"
alias la="exa -la"
alias l="exa -l"
alias ll="exa -l"
alias tree="exa --tree"

# lazygit
alias lg="lazygit"

# brew update
alias bu="brew update && brew upgrade && brew cleanup"
