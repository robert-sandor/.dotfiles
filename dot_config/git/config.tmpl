[core]
	editor = "nvim"
	pager = "delta"

[delta]
  features = catppuccin-mocha
  navigate = true

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[pull]
	rebase = true

[user]
	email = {{ .user.email | quote }}
	name = {{ .user.fullname | quote }}

[merge]
  conflictstyle = zdiff3

[include]
	path = "~/.config/git/catppuccin.gitconfig"
