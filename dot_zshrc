# SETTINGS

setopt AUTO_CD

# COMPLETION
autoload -Uz compinit && compinit
zstyle ':completion:*' matcher-list 'm:{a-zA-Z-_}={A-Za-z_-}'

# PLUGINS
PLUGINS_PREFIX=/usr/share

if command -v brew > /dev/null; then
    PLUGINS_PREFIX=${brew --prefix}/opt
fi

# enable starship
if command -v starship > /dev/null; then
    eval "$(starship init zsh)"
fi

[ ! -d $PLUGINS_PREFIX/zsh-autosuggestions ] || source $PLUGINS_PREFIX/zsh-autosuggestions/zsh-autosuggestions.zsh
[ ! -d $PLUGINS_PREFIX/zsh-syntax-highlighting ] || source $PLUGINS_PREFIX/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
[ ! -d $PLUGINS_PREFIX/fzf ] || source $PLUGINS_PREFIX/fzf/shell/key-bindings.zsh

# enable vi mode
bindkey -v

# aliases
source ~/.aliases

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"


