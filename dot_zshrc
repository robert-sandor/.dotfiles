export EDITOR='nvim'

[ ! -f "${HOME}/.zgenom/zgenom.zsh" ] && git clone https://github.com/jandamm/zgenom.git "${HOME}/.zgenom"
source "${HOME}/.zgenom/zgenom.zsh"

zgenom autoupdate

if ! zgenom saved; then
  zgenom ohmyzsh

  zgenom ohmyzsh plugins/git

  if command -v brew &> /dev/null; then zgenom ohmyzsh plugins/brew; fi
  if command -v apt &> /dev/null; then zgenom ohmyzsh plugins/apt; fi
  if command -v dnf &> /dev/null; then zgenom ohmyzsh plugins/dnf; fi

  zgenom load zsh-users/zsh-syntax-highlighting
  zgenom load zsh-users/zsh-autosuggestions
  zgenom load zsh-users/zsh-completions
  zgenom load unixorn/fzf-zsh-plugin
  zgenom load romkatv/powerlevel10k powerlevel10k

  zgenom compile "${HOME}/.zshrc"
fi

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Aliases
source ${HOME}/.aliases
